{
    "components": [
        {
            "type": "Block",
            "props": {
                "transparent": true
            },
            "components": [
                {
                    "type": "div",
                    "props": {
                        "children": "Clients",
                        "style": {
                            "fontSize": "32px"
                        }
                    }
                }
            ]
        },
        {
            "type": "Block",
            "components": [
                {
                    "type": "Cell",
                    "props": {
                        "style": {
                            "borderRadus": "16px",
                            "backgroundColor": "#fff"
                        }
                    },
                    "components": [
                        {
                            "type": "Table",
                            "props": {
                                "pagination": {
                                    "topControls": [
                                        {
                                            "type": "Row",
                                            "components": [
                                                {
                                                    "type": "Conditional",
                                                    "props": {
                                                        "condition": {
                                                            "$type": "$expression",
                                                            "expression": "data('$context.currentPage') > 0"
                                                        },
                                                        "ifTrue": [
                                                            {
                                                                "type": "Button",
                                                                "props": {
                                                                    "specialType": "arrowLeft",
                                                                    "type": "text",
                                                                    "style": "& div:last-child{color:var(--trood-red);}",
                                                                    "onClick": {
                                                                        "$type": "$action",
                                                                        "path": "$context.goToPage",
                                                                        "args": [
                                                                            {
                                                                                "$type": "$expression",
                                                                                "expression": "data('$context.currentPage') - 1"
                                                                            }
                                                                        ]
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    }
                                                },
                                                {
                                                    "type": "Conditional",
                                                    "props": {
                                                        "condition": {
                                                            "$type": "$expression",
                                                            "expression": "data('$context.currentPage') < (data('$context.pagesCount') - 1)"
                                                        },
                                                        "ifTrue": [
                                                            {
                                                                "type": "Button",
                                                                "props": {
                                                                    "specialType": "arrowRight",
                                                                    "type": "text",
                                                                    "style": "& div:last-child{color:var(--trood-red);}",
                                                                    "onClick": {
                                                                        "$type": "$action",
                                                                        "path": "$context.goToPage",
                                                                        "args": [
                                                                            {
                                                                                "$type": "$expression",
                                                                                "expression": "data('$context.currentPage') + 1"
                                                                            }
                                                                        ]
                                                                    }
                                                                }
                                                            }
                                                        ]
                                                    }
                                                }
                                            ]
                                        }
                                    ]
                                },
                                "entity": {
                                    "$type": "$data",
                                    "path": "$store.apis.custodian.client"
                                },
                                "columnComponents": [
                                    {
                                        "headerCell": {
                                            "type": "Cell",
                                            "props": {
                                                "xsAuto": true,
                                                "children": "Id"
                                            }
                                        },
                                        "bodyCell": {
                                            "type": "Cell",
                                            "props": {
                                                "xsAuto": true,
                                                "children": {
                                                    "$type": "$data",
                                                    "path": "$context.id"
                                                }
                                            }
                                        }
                                    },
                                    {
                                        "bodyCell": {
                                            "type": "Link",
                                            "props": {
                                                "to": {
                                                    "$type": "$expression",
                                                    "expression": "\"/client/\" || data(\"$context.id\")"
                                                },
                                                "children": {
                                                    "$type": "$data",
                                                    "path": "$context.name"
                                                }
                                            }
                                        }
                                    }
                                ]
                            }
                        }
                    ]
                }
            ]
        }
    ]
}
